{% extends 'layouts/app.twig' %}

{% block title %}Dashboard - Attendance Management System{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <h1>Attendance Dashboard</h1>
        <p class="lead">Welcome to the attendance management system. Select an event to manage attendance.</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-calendar"></i> Events</h5>
                <h2 class="card-text">{{ events|length }}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users"></i> Users</h5>
                <h2 class="card-text">{{ total_users|default(0) }}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-check-circle"></i> Attendances</h5>
                <h2 class="card-text">{{ total_attendances|default(0) }}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-clipboard-list"></i> Organizations</h5>
                <h2 class="card-text">{{ total_organizations|default(0) }}</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Events</h5>
            </div>
            <div class="card-body">
                {% if events %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Organization</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Attendees</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for event in events %}
                                <tr>
                                    <td>{{ event.name }}</td>
                                    <td>{{ event.organization.name }}</td>
                                    <td>{{ event.start_at|date('M d, Y H:i') }}</td>
                                    <td>{{ event.end_at|date('M d, Y H:i') }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if event.status == 'scheduled' %}bg-secondary
                                            {% elseif event.status == 'ongoing' %}bg-success
                                            {% else %}bg-info{% endif %}">
                                            {{ event.status|title }}
                                        </span>
                                    </td>
                                    <td>{{ event.users.count }}</td>
                                    <td>
                                        <a href="{{ path('attendance.show', {'event': event.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        {% if app.user.hasRole(['admin', 'coordinator']) %}
                                        <a href="{{ path('events.edit', {'id': event.id}) }}" class="btn btn-sm btn-secondary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">No events available.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}