{% extends 'layouts/app.twig' %}

{% block title %}{{ event.name }} - Attendance{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ event.name }}</h1>
            <a href="{{ path('attendance.index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Events
            </a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Event Details</h5>
                        <p><strong>Organization:</strong> {{ event.organization.name }}</p>
                        <p><strong>Description:</strong> {{ event.description|default('No description') }}</p>
                        <p><strong>Start:</strong> {{ event.start_at|date('M d, Y H:i') }}</p>
                        <p><strong>End:</strong> {{ event.end_at|date('M d, Y H:i') }}</p>
                        <p><strong>Status:</strong> 
                            <span class="badge 
                                {% if event.status == 'scheduled' %}bg-secondary
                                {% elseif event.status == 'ongoing' %}bg-success
                                {% else %}bg-info{% endif %}">
                                {{ event.status|title }}
                            </span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5>Attendance Options</h5>
                        <div class="btn-group-vertical w-100" role="group">
                            <!-- Manual Check-in -->
                            <button type="button" class="btn btn-outline-primary mb-2" data-bs-toggle="modal" data-bs-target="#manualCheckinModal">
                                <i class="fas fa-check-circle"></i> Manual Check-in
                            </button>
                            
                            <!-- QR Code Check-in -->
                            <button type="button" class="btn btn-outline-success mb-2" data-bs-toggle="modal" data-bs-target="#qrCheckinModal">
                                <i class="fas fa-qrcode"></i> QR Code Check-in
                            </button>
                            
                            <!-- Barcode Check-in -->
                            <button type="button" class="btn btn-outline-info mb-2" data-bs-toggle="modal" data-bs-target="#barcodeCheckinModal">
                                <i class="fas fa-barcode"></i> Barcode Check-in
                            </button>
                            
                            <!-- Face Recognition Check-in -->
                            <button type="button" class="btn btn-outline-warning mb-2" data-bs-toggle="modal" data-bs-target="#faceCheckinModal">
                                <i class="fas fa-user-check"></i> Face Recognition Check-in
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Manual Check-in Modal -->
<div class="modal fade" id="manualCheckinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manual Check-in</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="manualCheckinForm">
                    <div class="mb-3">
                        <label for="userSelect" class="form-label">Select User</label>
                        <select class="form-select" id="userSelect" name="user_id" required>
                            <option value="">Select a user...</option>
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.name }} ({{ user.email }})</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="statusSelect" class="form-label">Status</label>
                        <select class="form-select" id="statusSelect" name="status">
                            <option value="present">Present</option>
                            <option value="absent">Absent</option>
                            <option value="justified">Justified</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="registerManualAttendance()">Register</button>
            </div>
        </div>
    </div>
</div>

<!-- QR Check-in Modal -->
<div class="modal fade" id="qrCheckinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code Check-in</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <img src="{{ path('qrcode.generate', {'event': event.id}) }}" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                    <p class="mt-2">Scan this QR code to check in</p>
                </div>
                <p>Or enter QR token:</p>
                <input type="text" class="form-control" id="qrToken" placeholder="Enter QR token">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="registerQRAttendance()">Register</button>
            </div>
        </div>
    </div>
</div>

<!-- Barcode Check-in Modal -->
<div class="modal fade" id="barcodeCheckinModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Barcode Check-in</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <img src="{{ path('barcode.generate', {'event': event.id}) }}" alt="Barcode" class="img-fluid" style="max-width: 300px;">
                    <p class="mt-2">Scan this barcode to check in</p>
                </div>
                <p>Or enter barcode data:</p>
                <input type="text" class="form-control" id="barcodeData" placeholder="Enter barcode data">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" onclick="registerBarcodeAttendance()">Register</button>
            </div>
        </div>
    </div>
</div>

<!-- Face Recognition Check-in Modal -->
<div class="modal fade" id="faceCheckinModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Face Recognition Check-in</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body text-center">
                                <video id="video" width="100%" height="300" autoplay playsinline></video>
                                <div class="mt-3">
                                    <button id="startCamera" class="btn btn-primary">Start Camera</button>
                                    <button id="captureBtn" class="btn btn-success" style="display: none;">Capture Face</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6>Captured Image Preview</h6>
                                <img id="capturedImage" src="" alt="Captured face" class="img-fluid" style="display: none;">
                                <p id="faceStatus" class="mt-2">No image captured yet</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="registerFaceBtn" onclick="registerFaceAttendance()" disabled>Register Face Attendance</button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Attendance Records</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Check-in Time</th>
                                <th>Method</th>
                                <th>Status</th>
                                <th>Metadata</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for attendance in attendances %}
                            <tr>
                                <td>{{ attendance.user.name }}</td>
                                <td>{{ attendance.check_in_at|date('M d, Y H:i:s') }}</td>
                                <td>
                                    <span class="badge 
                                        {% if attendance.method == 'manual' %}bg-secondary
                                        {% elseif attendance.method == 'qr' %}bg-success
                                        {% elseif attendance.method == 'barcode' %}bg-info
                                        {% else %}bg-warning{% endif %}">
                                        {{ attendance.method|title }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge 
                                        {% if attendance.status == 'present' %}bg-success
                                        {% elseif attendance.status == 'absent' %}bg-danger
                                        {% else %}bg-info{% endif %}">
                                        {{ attendance.status|title }}
                                    </span>
                                </td>
                                <td>
                                    {% if attendance.metadata %}
                                        {% if attendance.metadata.confidence %}
                                            Confidence: {{ attendance.metadata.confidence }}
                                        {% endif %}
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
// Face recognition functionality
let video = document.getElementById('video');
let canvas = document.createElement('canvas');
let capturedImage = document.getElementById('capturedImage');
let captureBtn = document.getElementById('captureBtn');
let startCamera = document.getElementById('startCamera');
let registerFaceBtn = document.getElementById('registerFaceBtn');
let faceStatus = document.getElementById('faceStatus');

startCamera.addEventListener('click', async function() {
    try {
        const stream = await navigator.mediaDevices.getUserMedia({ video: true });
        video.srcObject = stream;
        captureBtn.style.display = 'inline-block';
        startCamera.style.display = 'none';
    } catch (err) {
        console.error("Error accessing camera: ", err);
        faceStatus.textContent = 'Could not access camera: ' + err.message;
        faceStatus.className = 'mt-2 text-danger';
    }
});

captureBtn.addEventListener('click', function() {
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    canvas.getContext('2d').drawImage(video, 0, 0, canvas.width, canvas.height);
    
    capturedImage.src = canvas.toDataURL('image/png');
    capturedImage.style.display = 'block';
    faceStatus.textContent = 'Face captured successfully!';
    faceStatus.className = 'mt-2 text-success';
    registerFaceBtn.disabled = false;
});

async function registerFaceAttendance() {
    if (!capturedImage.src || capturedImage.src === window.location.origin) {
        alert('Please capture a face image first');
        return;
    }
    
    // Convert data URL to blob
    const blob = await fetch(capturedImage.src).then(res => res.blob());
    const formData = new FormData();
    formData.append('image', blob, 'face_capture.png');
    
    try {
        const response = await fetch('{{ path('attendance.register.face', {'event': event.id}) }}', {
            method: 'POST',
            body: formData,
            headers: {
                'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            }
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Face attendance registered successfully!');
            location.reload();
        } else {
            alert('Error registering face attendance: ' + (result.message || result.error));
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error registering face attendance');
    }
}

async function registerManualAttendance() {
    const userId = document.getElementById('userSelect').value;
    const status = document.getElementById('statusSelect').value;
    
    if (!userId) {
        alert('Please select a user');
        return;
    }
    
    try {
        const response = await fetch('{{ path('attendance.register.manual', {'event': event.id}) }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            },
            body: JSON.stringify({
                user_id: userId,
                status: status
            })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Manual attendance registered successfully!');
            location.reload();
        } else {
            alert('Error registering attendance: ' + result.error);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error registering attendance');
    }
}

function registerQRAttendance() {
    const qrToken = document.getElementById('qrToken').value;
    
    if (!qrToken) {
        alert('Please enter a QR token or scan the code');
        return;
    }
    
    // In a real app, you would send the QR token to the server
    alert('QR attendance registration would happen here with token: ' + qrToken);
}

function registerBarcodeAttendance() {
    const barcodeData = document.getElementById('barcodeData').value;
    
    if (!barcodeData) {
        alert('Please enter barcode data or scan the code');
        return;
    }
    
    // In a real app, you would send the barcode data to the server
    alert('Barcode attendance registration would happen here with data: ' + barcodeData);
}
</script>
{% endblock %}